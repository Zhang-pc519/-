从键盘赋值建立一链表，其结点数据包括学生的学号、成绩，链表中结点的顺序为键盘赋值顺序，
//并编写从链表输出成绩清单的函数。
#include <stdio.h>
#include<stdlib.h>
#define LEN sizeof (struct student)
struct student
{
	long num;
	float score;
	struct student *next;
};
struct student *creat();
void print(strct student *);
int main()
{
	struct student *head;
	head=creat();
	print(head);
	return 0;
}
struct student *creat()
{
	long nu;
	float sco;
	struct student *p1,*p2,*head;
	head=NULL;
	p1=p2=(struct student *)malloc(LEN);
	printf("请输入学号，成绩：\n");
	scanf("%ld,%f",&nu,&sco);
	while(nu!=0)
	{
		p1->num=nu;
		p1->score=sco;
		if(head==NULL)
			head=p1;
		else
			p2->next=p1;
		p2=p1;
		p1=(struct student *)malloc(LEN);
		scanf("%ld,%f",&nu,&sco);
	}
	p2->next=NULL;
	return(head);
}
void print(struct student *head)
{
	struct student *p;
	p=head;
	printf("成绩单：\n");
	printf("   学号     成绩\n");
	while(p!=NULL)
	{
		printf("%10ld%15.2f\n",p-.num,p->score);
		p=p->next;
	}
}
